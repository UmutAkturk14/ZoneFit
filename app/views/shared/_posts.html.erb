
<% if current_user == @user  %>
  <%= simple_form_for @post do |f| %>
    <article class="position-relative">
      <%= f.input :content, as: :text, placeholder: "Share your heart out ❤️", label:false %>
      <%= f.input :attachment, as: :file, label: false %>
      <button type="submit" class="custom-btn btn-send">Share!</button>

    </article>
  <% end %>
<% end %>

<% @posts.each do |p| %>
  <%= render "shared/post", p: p %>
<% end %>


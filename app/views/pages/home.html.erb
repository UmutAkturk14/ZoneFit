<% content_for(:title) do %>
  <title>Dashboard | ZoneFit</title>
<% end %>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.verival.co.uk/blog/wp-content/uploads/2022/04/post-workout-meal-wichtig.png);">
        <div class="container">
          <h1><strong>Get set, fit, ready, go.</strong></h1>
          <p>Your journey to a healthier you starts now!</p>
        </div>
      </div>
    </div>
    <div class="carousel-item">
      <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://wallpaperaccess.com/full/8286338.jpg);">
        <div class="container">
          <h1><strong>Sweat, smile, succeed!</strong></h1>
          <p>Embrace the challenge, celebrate your victories!</p>
          <%= link_to "See Workout Videos", workouts_path, class: "btn btn-gradient" %>
        </div>
      </div>
    </div>
    <div class="carousel-item">
      <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://img.freepik.com/free-photo/chicken-wings-barbecue-sweetly-sour-sauce-picnic-summer-menu-tasty-food-top-view-flat-lay_2829-6471.jpg?w=2000);">
        <div class="container">
          <h1><strong>Train smart, train in the Zone.</strong></h1>
          <p>Walk in strong, walk out stronger!</p>
          <%= link_to "See Meal Recipes", recipes_path, class: "btn btn-gradient" %>
        </div>
      </div>
    </div>
  </div>

  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>


<div class="row justify-content-center">
  <div class="col-md-2 overflow-auto">
    <div class="w-75 h-50 d-flex flex-column justify-content-center align-items-center">
      <p class="fs-4" style="background-color: #9ef7e3; border-radius: 6px; padding: 2px;">Top Workouts</p>
      <% Workout.all.sample(10).each do |workout| %>
        <div class="container text-truncate">
          <%= link_to workout.title, workout_path(workout), class: "text-truncate fw-bold text-decoration-none text-dark text-capitalize" %>
        </div>
        <div class="container">
          <img src="<%= workout.thumbnail %>" class="img-fluid" style="border-radius: 16px;">
          <hr>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-md-6">
    <div class="wrapper d-flex justify-content-center">
      <div class="border border-gray p-3 rounded" style="width: 850px; background-color: #E4EFE7;">
        <div class="col-md-10 offset-md-1">
          <div class="col-d-10 offset-md-1">
            <%= simple_form_for @post do |f| %>
              <div class="form-group d-flex flex-column justify-content-center align-items-center">
                <%= f.input :content, placeholder: "Share your heart out ❤️", class: "form-control", label: false, wrapper_html: { style: "width: 600px;" } %>
                <%= f.input :attachment, as: :file, label: false %>
                <button type="submit" class="custom-btn btn-green">Post</button>
              </div>
            <% end %>
          </div>
        </div>

        <br>
        <% @posts.each do |p| %>
          <div class="d-flex flex-column" id="post">
            <div class="post w-100" data-controller="comments">
              <div class="post-content d-flex ">

                <% if p.user.photo.key.present? %>
                  <%= link_to user_profile_path(p.user), class: "d-flex justify-content-center align-items-start" do  %>
                    <%= cl_image_tag p.user.photo.key, height: 55, width: 55, crop: :fill, style: "border-radius: 50%;" %>
                  <% end %>
                <% else %>
                  <%= link_to user_profile_path(p.user), class: "d-flex justify-content-center align-items-start" do  %>
                    <img src='https://www.gse.org/wp-content/uploads/2021/03/avatar-dummy.png' class="avatar-large" />
                  <% end %>
                <% end %>

                <div class="ms-3">
                  <span><a href="<%= user_profile_path(p.user) %>" class="text-decoration-none text-dark me-1"><strong><%= "#{p.user.first_name} #{p.user.last_name}" %></strong> </a></span><span><small><%= p.created_at.strftime("%k:%M, %a, %d, %b, %Y") %></small></span>
                  <% if p.attachment.key.present? %>
                    <%= cl_image_tag p.attachment.key, class: "mt-2 object-fit-cover", style: "border-radius: 16px;", crop: :fill %>
                  <% elsif p.thumbnail.present? %>
                    <%= link_to workout_path(Workout.find_by(thumbnail: p.thumbnail).id) do  %>
                      <img src="<%= p.thumbnail %>" alt="Thumbnail image" class="mt-2 w-100 object-fit-cover" style="border-radius: 16px;" >
                    <% end %>
                  <% end %>



                  <!--
                  <p><strong><%= "#{p.user.first_name} #{p.user.last_name}" %></strong> <small><%= p.created_at.strftime("%k:%M, %a, %d, %b, %Y") %></small></p>
                  -->

                  <% if p.attachment.key.present? %>
                    <div class="">
                      <p class="text-break mt-4 text-start"><%= p.content %></p>
                    </div>
                  <% elsif p.thumbnail.present? %>
                    <p class="text-break mt-4 text-start"><%= p.content %></p>
                  <% else %>
                    <p class="text-break mt-2 text-start"><%= p.content %></p>
                  <% end %>

                </div>
              </div>
              <% if p.user == current_user %>
                <div class="post-actions">
                  <div class="d-flex align-items-end pt-5 justify-content-center">

                    <%= link_to "/", class: "d-flex justify-content-center align-items-center text-decoration-none", data: { action: "click->comments#clickButton" } do %>
                      <span class="text-dark text-decoration-none "><%= p.comments.count %> </span><i class="fa-regular fa-comment mx-2 fs-6"></i>
                    <% end %>
                    <%= link_to post_path(p), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this post?" }, class: "" do %>
                      <i class="far fa-trash-alt mx-2 fs-6"></i>
                    <% end %>
                  </div>
                </div>

              <% else %>
                <div class="post-actions">
                  <div class="d-flex align-items-end pt-5 justify-content-center">
                    <%= link_to "/", class: "d-flex justify-content-center align-items-center text-decoration-none", data: { action: "click->comments#clickButton" } do %>
                      <span class="text-dark text-decoration-none "><%= p.comments.count %> </span><i class="fa-regular fa-comment mx-2 fs-6"></i>
                    <% end %>
                  </div>
                </div>
              <% end %>



            </div>

            <section class="nested-comments d-none">
              <div class="container w-100">
                <%= simple_form_for [p, @comment] do |f| %>
                  <div class="d-flex justify-content-center align-items-center">
                    <%= f.hidden_field :commentable_id, value: p[:id] %>
                    <%= f.hidden_field :commentable_type, value: "Post" %>
                    <article class="justify-content-center align-items-center flex-column w-75 flex-row">
                      <div id="comment-div">
                        <%= f.input :content, as: :text, placeholder: "Reply your heart out ❤️", class: "w-100", label: false %>
                      </div>
                    </article>
                    <div class="">
                      <button type="submit" class="custom-btn btn-purple ms-2" style="z-index: 1;">Comment</button>
                    </div>
                  </div>
                <% end %>

                <div class="comments">
                  <% Comment.all.where(commentable_id: p[:id]).order("created_at ASC").each do |comment| %>
                    <article class="nested-comment" style="height: 6vh; width: 75%;">

                      <% if comment.user.photo.key.present? %>

                        <%= link_to user_profile_path(comment.user), class: "" do  %>
                          <%= cl_image_tag comment.user.photo.key, height: 35, width: 35, crop: :fill, style: "border-radius: 50%;" %>
                        <% end %>

                      <% else %>

                        <%= link_to user_profile_path(comment.user), class: "" do  %>
                          <img src='https://www.gse.org/wp-content/uploads/2021/03/avatar-dummy.png' class="avatar-dummy" />
                        <% end %>
                      <% end %>

                      <div class="nested-comment-content d-flex flex-column mx-3">
                        <div class="nested-comment-header d-flex justify-content-start">
                          <p class="mt-2"><strong><%= "#{comment.user.first_name} #{comment.user.last_name}" %></strong> <small><%= comment.created_at.strftime("%k:%M, %a, %d, %b, %Y") %></small></p>
                        </div>
                        <div class="nested-comment-content d-flex justify-content-between">
                          <p class="mt-2"><%= comment.content %></p>
                        <%# DELETE BUTTON %>
                        <% if comment.user == current_user %>
                          <div class="nested-comment-actions d-flex justify-content-end align-items-end">
                            <%= link_to comment_path(comment), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this comment?" }, class: "d-flex justify-content-center align-items-center" do %>
                              <i class="far fa-trash-alt mx-1"></i>
                            <% end %>
                          </div>
                        <% end %>
                        </div>
                      </div>
                    </article>
                  <% end %>
                </div>
              </div>
            </section>
          </div>
        <% end %>

        </div>
      </div>
    </div>

  <div class="col-md-2">
    <div class="container w-75 h-50 d-flex flex-column justify-content-center align-items-center">
      <p class="fs-4" style="background-color: #9ef7e3; border-radius: 6px; padding: 2px;">Top Recipes</p>
      <% Recipe.all.sample(8).each do |recipe| %>
        <%= link_to recipe_path(recipe), class: "text-decoration-none" do %>
          <p class="fs-6 text-center text-dark fw-bold"><%= recipe.title %></p>
          <img src="<%= recipe.url %>" class="w-100 h-75 object-fit-cover" style="border-radius: 16px;">
        <% end %>
      <% end %>
    </div>
  </div>
  </div>

</div>


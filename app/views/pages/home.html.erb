<div class="container">
  <h1>Welcome to Zonefit!</h1>

  <div class="row justify-content-center">
    <div class="col-sm-3">
      <div class="recipe-container">
        <h2>Top Recipes</h2>
        <% @top_recipes.each do |recipe| %>
          <%= link_to recipe.title, recipe_path(recipe) %>
          <img src="<%= recipe.url %>">
        <% end %>
      </div>
    </div>

    <div class="col-sm-6">

    </div>

    <div class="col-sm-3">
      <div class="recipe-container">
        <h2>Top Recipes</h2>
        <% @top_recipes.each do |recipe| %>
          <%= link_to recipe.title, recipe_path(recipe) %>
          <img src="<%= recipe.url %>">
        <% end %>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-sm-8 my-5">
      <div class="row">
        <div class="col-sm-8">
          <%= form_with url: root_path, method: :get, class: "d-flex" do %>
            <%= text_field_tag :query,
                  params[:query],
                  class: "form-control",
                  placeholder: "Type a keyword"
              %>
            <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
          <% end %>
        </div>
        <div class="col-sm-4">
          <%= image_tag "logo.png", class: "img-fluid" %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.container {
  max-width: 800px; /* Adjust the value as needed */
  margin: 0 auto;
}

.row {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: flex-start;
}

.col-sm-6 {
  flex: 0 0 50%;
  max-width: 50%;
}

.recipe-container {
  padding: 20px;
  background-color: #f9f9f9;
  margin-bottom: 20px;
  max-width: 250px;
}

.recipe-container a {
  display: block;
  margin-bottom: 10px;
}

.img-fluid {
  max-width: 100%;
  height: auto;
}

.row.justify-content-center {
  margin-top: 20px;
}

.row.justify-content-center .my-5 {
  flex: 0 0 100%;
  max-width: 100%;
  text-align: center;
}

.form-control {
  width: 100%;
}

.btn-primary {
  margin-top: 10px;
}

img {
  max-width: 100%;
}

</style>


<div>
    <% results = PgSearch.multisearch(params[:query]) %>
    <% if results.size > 0 %>
      <% results.map do |result| %>
          <% if result.searchable_type == "Workout" %>
            <p><%= link_to result.searchable.title, workout_path(result.searchable) %></p>
          <% elsif result.searchable_type == "Recipe"  %>
            <p><%= link_to result.searchable.title, recipe_path(result.searchable)  %></p>
          <% end %>
      <% end %>
    <% elsif params[:query].present? && results.size == 0 %>
      <p>Sorry, no results match your search. Try again!</p>
    <% end %>
  </div>

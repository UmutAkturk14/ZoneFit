<div class="container mg-top-10">
  <div class="item">
    <div class="item-content">
      <img src="<%= @recipe.url %>">
      <div class="recipe-details">
        <h1><%= @recipe.title %></h1>
        <p><strong>Ingredients: </strong></p>
          <ul>
            <% @recipe.ingredients.each do |ingredient| %>
              <li><%= ingredient.name %></li>
              <ul>
                <li>Protein: <%= ingredient.protein %></li>
                <li>Carbohydrates: <%= ingredient.carbohydrates %></li>
                <li>Fat: <%= ingredient.fat %></li>
                <li>Calories: <%= ingredient.calories %></li>
              </ul>
           <% end %>
          </ul>
        <p><strong>Prep Time: </strong><%= @recipe.prep_time %> Minutes</p>
        <p><strong>Instructions: </strong><%= @recipe.instructions %></p>
        <p><strong>Difficulty Level: </strong><%= @recipe.difficulty %></p>
        <p><strong>Created By: </strong><%= @recipe.user.first_name%> <%= @recipe.user.last_name %></p>

        <%# TODO: We can only delete a recipe we created %>
        <%= link_to "Delete",
          recipe_path(@recipe),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        <%= link_to "Edit this recipe", edit_recipe_path(@recipe) %>
        <%= simple_form_for [@recipe, @comment] do |f| %>
          <div class="d-flex">
            <%= f.hidden_field :commentable_id, value: params[:id] %>
            <%= f.hidden_field :commentable_type, value: params["controller"].singularize.capitalize %>
            <article class="justify-content-center align-items-center flex-column">
              <div id="comment-div">
                <%= f.input :content, as: :text, placeholder: "Enter your comment", label: false %>
              </div>
              <button type="submit" class="custom-btn btn-green">Comment</button>
            </article>
          </div>
        <% end %>
        <section class="comments">
          <% @comments.each do |comment| %>
            <article class="comment">
              <img src='https://kitt.lewagon.com/placeholder/users/arthur-littm' class="avatar-large" /> <%# TODO: Insert claudinary thingy here %>
              <div class="comment-content">
                <p><small><%= comment.created_at.strftime("%a, %d %b %Y") %></small></p>
                <p><%= comment.content %></p>

                <% if comment.user == current_user %>
                  <div class="comment-actions">
                    <%= link_to "/", class: "d-flex justify-content-center align-items-center" do %>
                      <p>Edit</p>
                      <i class="fas fa-pencil-alt mx-1"></i>
                    <% end %>


                    <%= link_to recipe_comment_path(comment), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this comment?" }, class: "d-flex justify-content-center align-items-center" do %>
                      <p>Delete</p>
                      <i class="far fa-trash-alt mx-1"></i>
                    <% end %>
                  </div>
              <% end %>
              </div>
            </article>
          <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container btn-warning">
  <%= link_to "Back to all recipes", recipes_path %>
</div>

